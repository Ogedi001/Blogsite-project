<%- include('./partials/header') %>

        <h2>Blog Id: <%= blog.id %>
        </h2>
        <h2>Title : <%=blog.title %>
        </h2>
        <h2> Author: <%= blog.author %>
        </h2>
        <h4> Date: <%= blog.date %>
        </h4>
        <p> <%= blog.body %>
        </p>
       
       <button class="btn btn-primary" onclick="updateBlogLink('<%= blog.id %>')">Update blog</button>
        <button class="btn btn-primary" onclick="deleteBlog('<%= blog.id %>')">Delete blog</button> <br><br>
        <button onclick="GoBack()" class="btn btn-primary">Go back</button> 
        
    
        <%- include('./partials/footer') %> 


<script>
const updateBlogLink = (id)=> window.location.assign("/updateblog?id="+ id),
GoBack = ()=>window.location.assign('/getblogs')


       const deleteBlog = async(id)=>{
        let url = "http://localhost:3000/deleteBlog?id=" + id
        const response = await fetch(url,{
method:'DELETE',
        })
  await response.json()
  window.location.assign('http://localhost:3000/getblogs')
      }
</script>

</html>